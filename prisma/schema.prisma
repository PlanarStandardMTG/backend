generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                    String    @id @default(cuid())
  email                 String    @unique
  username              String    @unique
  password              String
  elo                   Int       @default(1600)
  admin                 Boolean   @default(false)
  tournamentOrganizer   Boolean   @default(false)
  blogger               Boolean   @default(false)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  matchesAsPlayer1      Match[]               @relation("player1")
  matchesAsPlayer2      Match[]               @relation("player2")
  challongeConnection   ChallongeConnection?
}

model Match {
  id          String    @id @default(cuid())
  player1Id   String
  player2Id   String
  
  player1     User      @relation("player1", fields: [player1Id], references: [id], onDelete: Cascade)
  player2     User      @relation("player2", fields: [player2Id], references: [id], onDelete: Cascade)
  
  winner      String?
  player1EloChange  Int?
  player2EloChange  Int?
  
  createdAt   DateTime  @default(now())
  completedAt DateTime?
  
  @@index([player1Id])
  @@index([player2Id])
}

model ChallongeConnection {
  id                  String    @id @default(cuid())
  userId              String    @unique
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  accessToken         String
  refreshToken        String
  expiresAt           DateTime
  scope               String?
  challongeUsername   String?
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  tournaments         Tournament[]
  
  @@index([userId])
}

model Tournament {
  id                    String    @id @default(cuid())
  challongeId           String    @unique
  userId                String?
  connection            ChallongeConnection? @relation(fields: [userId], references: [userId], onDelete: Cascade)
  
  name                  String
  tournamentType        String
  url                   String?
  state                 String?
  startsAt              DateTime?
  gameName              String?
  participantCount      Int       @default(0)
  
  lastSyncedAt          DateTime  @default(now())
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  @@index([userId])
  @@index([challongeId])
}

